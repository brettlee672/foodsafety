  <plugin name="cordova-plugin-camera" spec="~2.3.0">
    <variable name="CAMERA_USAGE_DESCRIPTION" value="Camera used for development purposes" />
  </plugin>
  <plugin name="cordova-plugin-file" spec="4.3.1" />
  <plugin name="cordova-plugin-file-transfer" spec="1.6.1" />
  <plugin spec="https://github.com/apache/cordova-plugin-geolocation/#f2af148" />
  <plugin name="cordova-plugin-media" spec="2.4.1" />
  <plugin name="cordova-plugin-media-capture" spec="1.4.1" />
  <plugin name="cordova-plugin-network-information" spec="1.3.1" />
  <plugin name="cordova-plugin-geolocation" spec="https://github.com/apache/cordova-plugin-geolocation/">
    <variable name="GEOLOCATION_USAGE_DESCRIPTION" value="Geolocation used for development purposes" />
  </plugin>
  <plugin name="de.appplant.cordova.plugin.local-notification" spec="https://github.com/katzer/cordova-plugin-local-notifications" />
</widget>
